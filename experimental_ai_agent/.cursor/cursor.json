{
  "version": "1.0.0",
  "name": "ICP Normalizer",
  "description": "FastAPI + React application for normalizing Ideal Customer Profiles using MISTRAL AI",
  "author": "Tooba",
  "folders": {
    "backend": {
      "description": "FastAPI backend with MISTRAL integration",
      "patterns": ["*.py", "*.txt"]
    },
    "frontend": {
      "description": "React + Vite frontend with modern UI",
      "patterns": ["*.js", "*.jsx", "*.css", "*.json"]
    }
  },
  "scripts": {
    "backend:dev": "cd backend && uvicorn app:app --reload --host 0.0.0.0 --port 8000",
    "frontend:dev": "cd frontend && npm run dev",
    "backend:install": "pip install -r requirements.txt",
    "frontend:install": "cd frontend && npm install"
  },
  "environment": {
    "python_version": "3.8+",
    "node_version": "16+",
    "required_env_vars": ["MISTRAL_API_KEY"]
  }
}
